@import "vert-tables.css"

.btn
  border-radius: 2px

header 
  .nav
    margin-top: 20px
  .line
    height: 5px
    background: #c02c25
    position: absolute
    left: 0
    width: 100%

  .aside-toggle
    padding: 9px 10px

    &:hover
      background: #eee
      cursor: pointer

    .icon-bar
      margin-top: 4px
      display: block
      width: 22px
      height: 2px
      border-radius: 1px
      background: black

.loading-spinner
  display: inline-block
  width: 16px
  height: 16px
  background: url("http://my.selectel.org/static/_panel/img/gh-spinner.gif")
  background-size: 16px
  cursor: pointer

.nodes
  .node
    cursor: pointer